        <!--分割线1-->
        <TextView
            android:id="@+id/inputHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:shadowColor="#cccccc"
            android:shadowDx="10.0"
            android:shadowDy="10.0"
            android:shadowRadius="3.0"
            android:text="@string/inputHeadline"
            android:textColor="@color/classicBlue"
            android:textSize="25sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/inputHeadline"
            android:background="@color/lightGray" />

        <LinearLayout
            android:id="@+id/bigLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/city" />

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:text="@string/city"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/lightGray" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:entries="@array/locations"
                    android:prompt="@string/cityPrompt"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray" />
            <!--2-户型-->
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/house" />

                <TextView
                    android:layout_width="125dp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:text="@string/houseType"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/lightGray" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:prompt="@string/houseTypePrompt"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray" />

        </LinearLayout>

        <!--        <ImageView-->
        <!--            android:id="@+id/houseTypeImage"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="200dp"-->
        <!--            android:layout_below="@id/layout2"-->
        <!--            android:layout_marginStart="75dp"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:layout_marginBottom="15dp"-->
